<div class="box">
    <%= link_to (image_tag pin.image(:medium)), pin %>

    <p class="description">
        <%= pin.description %>
    </p>
    <p>
        <strong>
            作者 <%= pin.user.name %>
        </strong>
    </p>
    <% if current_user == pin.user %>
        <p>
          <%= link_to '編輯', edit_pin_path(pin) %>
          <%= link_to '刪除', pin, method: :delete, data: { confirm: '你確定嗎？' } %>
        </p>
    <% end %>
</div>